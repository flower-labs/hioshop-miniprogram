/* pages/sign/sign.wxss */
page {
  background-color: #f5f5f5;
}
.background {
  background-color: yellow;
  height: 400rpx;
}
.sign-record {
  background-color: white;
  display: flex;
  flex-direction: column;
  margin: 24rpx;
  border-radius: 24rpx;
}
.desc {
  margin: 24rpx 0rpx 0rpx 24rpx;
  background-color: white;
}
.block {
  display: block;
  margin-bottom: 24rpx;
}
/* 签到模块 */
.sign-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: white;
  margin: 24rpx;
  margin-top: 0rpx;
  border-radius: 24rpx;
  padding: 24rpx;
}
.sign-api {
  margin: 24rpx 0rpx 0rpx 0rpx;
}
.bonus-total-desc {
  margin: 24rpx 0rpx 0rpx 0rpx;
}
.sign-button{
    align-self: center;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}
.sign-work {
  display: flex;
  justify-content: space-between;
}
.grow-sign {
  display: flex;
  flex-direction: row;
  border: 1rpx solid black;
  align-self: center;
  width: 48%;
}
.day-sign {
  display: flex;
  flex-direction: row;
  border: 1rpx solid black;
  align-self: center;
  width: 48%;
}
.left image {
  background-color: rgb(238, 204, 141);
  width: 60rpx;
  height: 60rpx;
}
.left {
  width: 25%;
  align-self: center;
}
.right {
  width: 75%;
}

.data-sign {
  display: flex;
  align-items: center;
  justify-content: space-between;
  text-align: center;
}
.data-box {
  display: flex;
  flex-direction: column;
}
.sign {
  border: 1rpx solid red;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  font-size: small;
}
.signed {
  background-color: yellow;
}
