/* pages/baby-setting/index.wxss */

page {
  background: #f5f5f5;
  --td-brand-color: #0052d9;
  --td-button-primary-active-bg-color: #4785e9;
  --td-button-primary-active-border-color: rgba(31, 214, 15, 0.075);
}

.action-container {
  margin-top: 60rpx;
}

.input-wrapper {
  margin: 0 32rpx;
  margin-top: 30rpx;
}

.action-button {
  display: flex;
  justify-content: center;
  margin-top: 120rpx;
}

.textarea-wrapper {
  margin: 0 32rpx;
  padding: 32rpx 32rpx 48rpx;
  background-color: #fff;
}

.external-class {
  padding-top: 24rpx !important;
  padding-bottom: 24rpx !important;
}

.radio__image {
  pointer-events: none;
  z-index: 1;
}

.radio__select {
  height: 100%;
}

.time-range-select{
  --td-switch-checked-color: #00A870;
}

.card {
  position: relative;
  margin: 32rpx;
  height: 140rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-sizing: border-box;
  border: 3rpx solid #fff;
}

.card--active {
  border-color: #0052d9;
}

.card--active::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  width: 0;
  border: 14px solid #0052d9;
  border-bottom-color: transparent;
  border-right-color: transparent;
}

.card__icon {
  color: #fff;
  position: absolute;
  left: 1.5px;
  top: 1.5px;
  z-index: 1;
}

.t-check-class{
  width: 100%;
  position: absolute !important;
}

/* 横向布局 */
.horizontal-box {
  width: calc(100% - 64rpx);
  display: flex;
  align-items: center;
  margin: 32rpx;
}

.horizontal-box .card {
  flex: 1;
  margin: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.horizontal-box .card + .card {
  margin-left: 24rpx;
}

.horizontal-box .card::after {
  border-width: 12px;
}

.horizontal-box .card__icon {
  font-size: 12px;
}

.t-checkbox {
  height: 100%;
}
