.page-container {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  height: 100vh;
  background: #f5f5f5;
  --td-brand-color: #0052d9;
  --td-button-primary-active-bg-color: #4785e9;
  --td-button-primary-active-border-color: rgba(31, 214, 15, 0.075);
}

.tag-select-container{
  padding: 30rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  gap: 36rpx;
  background-color: #fff;
}

.textarea-wrapper {
  padding: 36rpx 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
}

.action-container{
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}
