/* pages/gude/gude.wxss */
.container {
  background-color: #f1f1f1;
}
/* 主题 */
.theme {
  position: relative;
  z-index: 1;
  margin: -20rpx 30rpx 0rpx 30rpx;
  background-color: white;
  box-sizing: border-box;
  height: 440rpx;
  border-radius: 18rpx;
}

.theme-box {
  padding: 20rpx;
}

.theme-box-title {
  font-size: 40rpx;
}
.theme-box-badge {
  margin-top: 10rpx;
}

.theme-box-badge text {
  background-color: #ffa500;
  border-radius: 15rpx;
  padding: 5rpx 10rpx;
  font-size: small;
  margin: 10rpx 10rpx 0rpx 0rpx;
}

.theme-box-time {
  font-weight: lighter;
  font-size: smaller;
  margin-top: 10rpx;
  margin-bottom: 0rpx;
}

.address {
  padding-left: 20rpx;
  margin-bottom: 20rpx;
}

.grid-item {
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.carNav image {
  width: 50rpx;
  height: 50rpx;
}
.phone image {
  width: 50rpx;
  height: 50rpx;
}

/* 积分 */
.bonus {
  display: flex;
  justify-content: space-between;
  background-color: white;
  margin: 30rpx 30rpx 0rpx 30rpx;
  border-radius: 18rpx;
  padding: 30rpx 10rpx 30rpx 10rpx;
}

.bonusItem {
  width: calc(33.33% - 10rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.bonusItem image {
  width: 100rpx;
  height: 100rpx;
}

.bonusItem text {
  font-size: 24rpx;
  margin-top: 10rpx;
  color: #ffa500;
}
/* 热销 */
.Hotsales {
  position: relative;
  z-index: 1;
  margin: 30rpx 30rpx 30rpx 30rpx;
  background-color: white;
  box-sizing: border-box;
  border-radius: 18rpx;
}
/* 商品展示模板 */

.goods-list-wrap {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin: 20rpx;
    box-sizing: border-box;
  }
  
  .goods-list-wrap .goods-box {
    width: 48%;
    margin-bottom: 20rpx;
    padding: 10rpx;
    border: 1px solid #ffa500;
    border-radius: 5rpx;
    box-sizing: border-box;
    text-align: center;
    
  }
  
  .goods-list-wrap .no-margin {
    margin-right: 0;
  }
  
  .goods-box .navi-url .image {
    width: 100%;
    height: 150rpx;
    border-radius: 8rpx;
    background: #f9f9f9;
  }
  
  .clearfix:after {
    visibility: hidden;
    display: block;
    font-size: 0;
    content: " ";
    clear: both;
    height: 0;
  }
  
/* 商品描述 */
.info-wrap {
  background: #fff;
  padding: 30rpx 30rpx 30rpx 30rpx;
  border-bottom: 1rpx solid #f1f1f1;
}

.info-wrap .l {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 82%;
}

.info-wrap .l .goods-title {
  width: 100%;
  font-size: 30rpx;
  text-overflow: ellipsis;
  white-space: wrap;
  overflow: hidden;
  font-weight: 500;
}

.info-wrap .l .goods-intro {
  font-size: 26rpx;
  color: #888;
  text-overflow: ellipsis;
  white-space: wrap;
  overflow: hidden;
}

/* 商品价格描述 */
.price-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14rpx 30rpx 24rpx 30rpx;
  /* border-bottom: 1rpx solid #f1f1f1; */
  background: #fff;
}

.price-info .l {
  display: flex;
  flex-direction: column;
}

.price-info .l .now-price {
  display: flex;
  justify-content: flex-start;
  align-items: baseline;
  font-size: 30rpx;
  color: #ff3456;
  margin-right: 10rpx;
}

.price-info .l .now-price .sym {
  font-size: 24rpx;
}

.price-info .l .now-price .num {
  font-size: 28rpx;
  font-weight: 500;
}

